pipeline {
    agent any

    tools {
      nodejs 'NodeJS18110'
    }

    stages {
        stage('Build') {

          when{
            changeset "**/result/**"
          }
            steps {
                echo 'Compiling result app...'
                dir('result') {
                  sh 'npm install'
                }
            }
        }
        stage('Test') {
          when{
            changeset "**/result/**"
          }
            steps {
                echo 'Running Unit Tests on result app...'
                dir('result'){
                  sh 'npm install'
                  sh 'npm test'
                }
            }
        }
    }
        post{
          always{
            echo 'Building multibranch pipeline for result is completed..'
          }
        }
}
